### Default variable file for cert-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ dockerhub }}

replicaCount: {{content_replicacount|default(1)}}
repository: {{content_repository|default('content-service')}}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{content_cpu_req|default('100m')}}
    memory: {{content_mem_req|default('100Mi')}}
  limits:
    cpu: {{content_cpu_limit|default('1')}}
    memory: {{content_mem_limit|default('1024Mi')}}
network:
  port: 9000
strategy:
  type: RollingUpdate
  maxsurge: 1
  maxunavailable: 0

content:
{% if (content is not defined) and content.readinessProbe is not defined %}
  readinessProbe:
    httpGet:
      path: /health
      port: 9000
    initialDelaySeconds: 30
    periodSeconds: 10
    timeoutSeconds: 5
    failureThreshold: 5
    successThreshold: 1
{% elif content.readinessProbe %}
{{ content.readinessProbe | to_nice_yaml }}
{% endif %}
{% if (content is not defined) and content.livenessProbe is not defined %}
  livenessProbe:
    httpGet:
      path: /health
      port: 9000
    initialDelaySeconds: 60
    periodSeconds: 10
{% elif content.livenessProbe %}
{{ content.livenessProbe | to_yaml }}
{% endif %}

  