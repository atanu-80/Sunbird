### Default variable file for cert-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ dockerhub }}

replicaCount: {{cert_replicacount|default(1)}}
repository: {{cert_repository|default('cert_service')}}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{cert_cpu_req|default('100m')}}
    memory: {{cert_mem_req|default('100Mi')}}
  limits:
    cpu: {{cert_cpu_limit|default('1')}}
    memory: {{cert_mem_limit|default('500Mi')}}
network:
  port: 9000
strategy:
  type: RollingUpdate
  maxsurge: 1
  maxunavailable: 0

cert:
{% if (cert is not defined) and cert.readinessProbe is not defined %}
  readinessProbe:
    httpGet:
      path: /health
      port: 9000
    initialDelaySeconds: 30
    periodSeconds: 10
    timeoutSeconds: 5
    failureThreshold: 5
    successThreshold: 1
{% elif cert.readinessProbe %}
{{ cert.readinessProbe | to_nice_yaml }}
{% endif %}
{% if (cert is not defined) and cert.livenessProbe is not defined %}
  livenessProbe:
    httpGet:
      path: /service/health
      port: 9000
    initialDelaySeconds: 60
    periodSeconds: 10
{% elif cert.livenessProbe %}
{{ cert.livenessProbe | to_yaml }}
{% endif %}

  

