### Default variable file for player-service ###
  
namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ dockerhub }}

replicaCount: {{player_replicacount|default(1)}}
repository: {{player_repository|default('player')}}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{player_cpu_req|default('100m')}}
    memory: {{player_mem_req|default('100Mi')}}
  limits:
    cpu: {{player_cpu_limit|default('1')}}
    memory: {{player_mem_limit|default('1024Mi')}}
network:
  port: 3000
strategy:
  type: RollingUpdate
  maxsurge: 1
  maxunavailable: 0

sunbird_portal_player_cdn_enabled: {{sunbird_portal_player_cdn_enabled|lower}}

player:
{% if (player is not defined) and player.readinessProbe is not defined %}
  readinessProbe:
    httpGet:
      path: /health
      port: 3000
    initialDelaySeconds: 30
    periodSeconds: 10
    timeoutSeconds: 5
    failureThreshold: 5
    successThreshold: 1
{% elif player.readinessProbe %}
{{ player.readinessProbe | to_nice_yaml }}
{% endif %}
{% if (player is not defined) and player.livenessProbe is not defined %}
  livenessProbe:
    httpGet:
      path: /service/health
      port: 3000
    initialDelaySeconds: 60
    periodSeconds: 10
{% elif player.livenessProbe %}
{{ player.livenessProbe | to_yaml }}
{% endif %}
